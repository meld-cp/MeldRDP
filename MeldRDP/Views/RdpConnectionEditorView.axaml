<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:MeldRDP.ViewModels"
	mc:Ignorable="d"
	d:DesignWidth="400"
	d:DesignHeight="150"
	x:Class="MeldRDP.Views.RdpConnectionEditorView"
	x:DataType="vm:RdpConnectionEditorViewModel"
>

	<StackPanel

	>
		<CheckBox
			Content="Keep Session Alive"
			IsChecked="{Binding KeepSessionAlive}"
		/>

		<StackPanel
			Orientation="Horizontal"
			Spacing="10"
		>
			<TextBlock
				Text="Mouse Jiggler Interval:"
				VerticalAlignment="Center"
			/>
			<NumericUpDown
				Minimum="30"
				Text="Mouse"
				Value="{Binding MouseJigglerInterval}"
				HorizontalAlignment="Left"
				Width="130"
				TextAlignment="Center"
				Increment="10"
				FormatString="N0"
			/>
			<TextBlock
				Text="seconds"
				VerticalAlignment="Center"
			/>
		</StackPanel>
	</StackPanel>
</UserControl>
